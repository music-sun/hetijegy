{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
        "service-client": ["src/scripts/services/service-client"],
        "captcha-service": ["src/scripts/services/captcha-service"]
    }
  },
  "include": ["src"]
}
